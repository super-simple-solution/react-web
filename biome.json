{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
    "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"]
  },
	"formatter": {
		"include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120,
		"attributePosition": "auto"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src/**/*.jsx"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": { "noArguments": "off" },
			"suspicious": {
				"noDebugger": "off",
				"noEmptyBlockStatements": "error",
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"jsxRuntime": "reactClassic",
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"attributePosition": "auto"
		}
	}
}
